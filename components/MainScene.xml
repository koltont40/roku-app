<?xml version="1.0" encoding="UTF-8"?>
<component name="MainScene" extends="Scene">
    <children>

        <Rectangle id="bg" width="1920" height="1080" color="0x040b1fFF" />

        <!-- Checking screen -->
        <LayoutGroup id="checkingGroup"
                     translation="[100,150]"
                     layoutDirection="vert"
                     itemSpacings="[0,28]">
            <Label id="checkingTitle"
                   text="Lightwave LINK"
                   width="1500"
                   font="LargeSystemFont"
                   horizAlign="left" />

            <Label id="checkingLabel"
                   width="1700"
                   wrap="true"
                   maxLines="4"
                   font="MediumSystemFont"
                   text="Checking network access..." />
        </LayoutGroup>

        <!-- Login screen -->
        <LayoutGroup id="loginGroup"
                     visible="false"
                     translation="[100,150]"
                     layoutDirection="vert"
                     itemSpacings="[0,26]">
            <Label id="loginTitle"
                   text="Lightwave LINK Access"
                   width="1500"
                   font="LargeSystemFont"
                   horizAlign="left" />

            <Label id="loginDesc"
                   width="1700"
                   wrap="true"
                   maxLines="6"
                   font="MediumSystemFont"
                   text="This Roku is not on an approved Alabama Lightwave subnet. If you are an authorized user (customer or first responder), press OK to continue and view cameras." />

            <Button id="loginButton"
                    minWidth="400"
                    text="Request Access" />

            <Label id="loginStatus"
                   width="1700"
                   wrap="true"
                   maxLines="4"
                   font="MediumSystemFont"
                   text="" />
        </LayoutGroup>

        <!-- Content screen -->
        <Group id="contentGroup" visible="false">
            <Label id="appTitle"
                   translation="[100,80]"
                   text="Lightwave LINK Cameras"
                   width="1500"
                   font="LargeSystemFont"
                   horizAlign="left" />

            <Rectangle id="brandBar"
                       width="1920"
                       height="4"
                       translation="[0,140]" />

            <RowList id="rowList"
                     translation="[100,170]"
                     itemSize="[300,170]"
                     itemSpacing="[40,20]"
                     numRows="3"
                     showRowLabel="true" />

            <Label id="cameraInfoLabel"
                   translation="[100,760]"
                   width="1700"
                   wrap="true"
                   maxLines="4"
                   height="320"
                   text="Select a camera to view details." />
        </Group>

    </children>

    <script type="text/brightscript" uri="pkg:/components/MainScene.brs" />
</component>
